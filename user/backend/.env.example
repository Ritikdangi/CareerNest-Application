PORT=5000
MONGO_URI=
JWT_SECRET=
NODE_ENV=development
MAILTRAP_TOKEN=7
# If you want to send real emails via Gmail set these instead of using Mailtrap
# For Gmail use an App Password (recommended) and set EMAIL_USER to your gmail address
EMAIL_USER=your.email@gmail.com
EMAIL_PASS=your_app_password_here
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=465
EMAIL_SMTP_SECURE=true

CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=G
CLOUDINARY_CLOUD_NAME=

# DigitalOcean Spaces Configuration
DO_SPACES_KEY=your_spaces_access_key_here
DO_SPACES_SECRET=your_spaces_secret_key_here

CLIENT_URL=http://localhost:5173
KEEP_ALIVE_URLS=http://localhost:5173/health

# Optional: Frontend URL to redirect after OAuth flows (e.g., LinkedIn)
CLIENT_REDIRECT_URL=http://localhost:5173

# LinkedIn OAuth
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret
# Must match your backend route exactly
LINKEDIN_REDIRECT_URI=http://localhost:5000/api/v1/auth/linkedinCallback

# Cookie settings (sensible defaults if not set)
# COOKIE_NAME defaults to jwt-AlumnLink when unset
# COOKIE_SAMESITE: one of lax|strict|none (prod defaults to none; dev defaults to lax)
# COOKIE_SECURE: true|false (prod defaults to true; dev defaults to false)
# COOKIE_DOMAIN: e.g. .yourdomain.com in production; leave empty for localhost
# COOKIE_NAME=jwt-AlumnLink
# COOKIE_SAMESITE=none
# COOKIE_SECURE=true
# COOKIE_DOMAIN=.alumnlink.com

# CORS allowlist (comma-separated). If not set, all origins are reflected to support credentials.
# Example: ALLOWED_ORIGINS=https://app.alumnlink.com,https://alumnlink.vercel.app,http://localhost:5173
# ALLOWED_ORIGINS=

# Toggle auto-verification for signups (useful for dev)
AUTO_VERIFY_ON_SIGNUP=false

# Server mode override (normally auto-detected). Set to 'true' for Vercel-like serverless.
# SERVERLESS=false